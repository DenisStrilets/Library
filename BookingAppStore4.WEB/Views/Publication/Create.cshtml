
@model ViewModel.Models.PublicationViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add publication</h2>

@using (Html.BeginForm("Create", "Publication", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.ValidationSummary(true)

    @Html.LabelFor(model => model.AuthorId, "Author ID")
    <br />
    @Html.EditorFor(model => model.AuthorId)
    @Html.ValidationMessageFor(model => model.AuthorId)
    <br /><br />

    @Html.LabelFor(model => model.RedactionId, "Redaction ID")
    <br />
    @Html.EditorFor(model => model.RedactionId)
    @Html.ValidationMessageFor(model => model.RedactionId)
    <br /><br />
    @Html.LabelFor(model => model.Name, "Publication Name")
    <br />
    @Html.EditorFor(model => model.Name)
    @Html.ValidationMessageFor(model => model.Name)
    <br /><br />
    @Html.LabelFor(model => model.Title, "Title")
    <br />
    @Html.EditorFor(model => model.Title)
    @Html.ValidationMessageFor(model => model.Title)
    <br /><br />
    @Html.LabelFor(model => model.Tome, "Tome")
    <br />
    @Html.EditorFor(model => model.Tome)
    @Html.ValidationMessageFor(model => model.Tome)
    <br /><br />
    @Html.LabelFor(model => model.Pages, "Page")
    <br />
    @Html.EditorFor(model => model.Pages)
    @Html.ValidationMessageFor(model => model.Pages)
    <br /><br />
    @Html.LabelFor(model => model.Price, "Price")
    <br />
    @Html.EditorFor(model => model.Price)
    @Html.ValidationMessageFor(model => model.Price)

    <div class="editor-label">Image File</div>
    <div class="editor-field">
        <input type="file" name="uploadImage" />
    </div>
    <br /><br />
    <input type="submit" value="Add" />
}