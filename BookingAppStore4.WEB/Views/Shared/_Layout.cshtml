<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/scripts/jquery-1.10.2.min.js")
    @Scripts.Render("~/scripts/jquery.validate.min.js")
    @Scripts.Render("~/scripts/jquery.validate.unobtrusive.js")
    @Scripts.Render("~/scripts/kendo.all.min.js")

    @Styles.Render("~/Content/kendo.default.min.css")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Library", "Index", "Library", new { area = string.Empty }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Books", "Index", "Home")</li>
                    <li>@Html.ActionLink("Gournals", "Index", "Gournal")</li>
                    <li>@Html.ActionLink("Brochures", "Index", "Brochure")</li>
                    <li>@Html.ActionLink("Publications", "Index", "Publication")</li>

                    @if (User.IsInRole("admin"))
                    {
                        <li>@Html.ActionLink("Authors", "Index", "Author")</li>
                        <li>@Html.ActionLink("Redactions", "Index", "Redaction")</li>
                    }
                </ul>

                @if (User.Identity.IsAuthenticated)
                {

                    <ul class="nav navbar-nav navbar-right">
                        <li class="btn btn-primary">Hello! @User.Identity.Name</li>
                        <li>@Html.ActionLink("LogOut", "LogOut", "Account")</li>
                    </ul>
                }

                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Registration", "Register", "Account")</li>
                        <li>@Html.ActionLink("LogIn", "LogIn", "Account")</li>
                    </ul>
                }
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
