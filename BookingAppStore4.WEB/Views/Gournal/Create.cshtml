@model ViewModel.Models.GournalViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Gournal</h2>

@using (Html.BeginForm("Create", "Gournal", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    @Html.LabelFor(model=>model.Name, "Gournal Name")
    <br />
    @Html.EditorFor(model => model.Name)
    @Html.ValidationMessageFor(model => model.Name)
    <br /><br />
    @Html.LabelFor(model => model.Genre, "Genre")
    <br />
    @Html.EditorFor(model => model.Genre)
    @Html.ValidationMessageFor(model => model.Genre)
    <br /><br />
    @Html.LabelFor(model => model.RedactionId, "Redaction ID")
    <br />
    @Html.EditorFor(model => model.RedactionId)
    @Html.ValidationMessageFor(model => model.RedactionId)

    <br /><br />
    @Html.LabelFor(model => model.MainEditor, "Main Editor")
    <br />
    @Html.EditorFor(model => model.MainEditor)
    @Html.ValidationMessageFor(model => model.MainEditor)
    <br /><br />
    @Html.LabelFor(model => model.Price, "Price")
    <br />
    @Html.EditorFor(model => model.Price)
    @Html.ValidationMessageFor(model => model.Price)
    <br /><br />
    @Html.LabelFor(model => model.Circulation, "Circulation")
    <br />
    @Html.EditorFor(model => model.Circulation)
    @Html.ValidationMessageFor(model => model.Circulation)
    

    <div class="editor-label">Файл изображения</div>
    <div class="editor-field">
        <input type="file" name="uploadImage" />
    </div>

    <br /><br />

    <input type="submit" value="Add Gournal" />
}