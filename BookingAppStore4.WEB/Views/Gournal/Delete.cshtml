@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ViewModel.Models.GournalViewModel
<h2>Delete Gournal</h2>
<dl>
    <dt>Gournal Name</dt>
    <dd>
        @Html.DisplayFor(model => model.Name)
    </dd>

    <dt>Genre</dt>
    <dd>
        @Html.DisplayFor(model => model.Genre)
    </dd>

    <dt>Redaction</dt>
    <dd>
        @Html.DisplayFor(model => model.RedactionName)
    </dd>
    <dt>Main Editor</dt>
    <dd>
        @Html.DisplayFor(model => model.MainEditor)
    </dd>
    <dt>Price</dt>
    <dd>
        @Html.DisplayFor(model => model.Price)
    </dd>
    <dt>Circulation</dt>
    <dd>
        @Html.DisplayFor(model => model.Circulation)
    </dd>
    <dt>Image</dt>
    <dd>

        @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(Model.Image) + "\" />")
    </dd>

</dl>

@using (Html.BeginForm())
{
    <input type="submit" value="Delete" />
}