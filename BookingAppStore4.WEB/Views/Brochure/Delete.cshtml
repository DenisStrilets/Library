@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ViewModel.Models.BrochureViewModel
<h2>Delete Brochure</h2>
<dl>
    <dt>Brochure Name</dt>
    <dd>
        @Html.DisplayFor(model => model.Name)
    </dd>

    <dt>Redaction</dt>
    <dd>
        @Html.DisplayFor(model => model.RedactionName)
    </dd>
    <dt>Theme</dt>
    <dd>
        @Html.DisplayFor(model => model.Theme)
    </dd>
    <dt>Price</dt>
    <dd>
        @Html.DisplayFor(model => model.Price)
    </dd>
    <dt>Minimum Order</dt>
    <dd>
        @Html.DisplayFor(model => model.MinOrdering)
    </dd>
    <dt>Image</dt>
    <dd>

        @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                                + Convert.ToBase64String(Model.Image) + "\" />")
    </dd>
</dl>

@using (Html.BeginForm())
{
    <input type="submit" value="Delete" />
}