@model ViewModel.Models.BrochureViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Brochure</h2>

@using (Html.BeginForm("Create", "Brochure", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.ValidationSummary(true)

    @Html.LabelFor(model => model.Name, "Brochure Name")
    <br />
    @Html.EditorFor(model => model.Name)
    @Html.ValidationMessageFor(model => model.Name)
    <br /><br />
    @Html.LabelFor(model => model.RedactionId, "Redaction ID")
    <br />
    @Html.EditorFor(model => model.RedactionId)
    @Html.ValidationMessageFor(model => model.RedactionId)
    <br /><br />
    @Html.LabelFor(model => model.Theme, "Theme")
    <br />
    @Html.EditorFor(model => model.Theme)
    @Html.ValidationMessageFor(model => model.Theme)
    <br /><br />
    @Html.LabelFor(model => model.Price, "Price")
    <br />
    @Html.EditorFor(model => model.Price)
    @Html.ValidationMessageFor(model => model.Price)
    <br /><br />
    @Html.LabelFor(model => model.MinOrdering, "Minimum Order")
    <br />
    @Html.EditorFor(model => model.MinOrdering)
    @Html.ValidationMessageFor(model => model.MinOrdering)

    <div class="editor-label">Image File</div>
    <div class="editor-field">
        <input type="file" name="uploadImage" />
    </div>

    <br /><br />
    <input type="submit" value="Add Brochure" />
}