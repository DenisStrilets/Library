@model ViewModel.Models.BookViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Book</h2>

@using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    @Html.LabelFor(model => model.Name, "Book Name")
    <br />
    @Html.EditorFor(model => model.Name)
    @Html.ValidationMessageFor(model => model.Name)
    <br /><br />
    @Html.LabelFor(model => model.Genre, "Genre")
    <br />
    @Html.EditorFor(model => model.Genre)
    @Html.ValidationMessageFor(model => model.Genre)
    <br /><br />
    @Html.LabelFor(model => model.AuthorId, "Author ID")
    <br />
    @Html.EditorFor(model => model.AuthorId)
    @Html.ValidationMessageFor(model => model.AuthorId)
    <br /><br />
    @Html.LabelFor(model => model.RedactionId, "Redaction ID")
    <br />
    @Html.EditorFor(model => model.RedactionId)
    @Html.ValidationMessageFor(model => model.RedactionId)
    <br /><br />
    @Html.LabelFor(model => model.Price, "Price")
    <br />
    @Html.EditorFor(model => model.Price)
    @Html.ValidationMessageFor(model => model.Price)
    
    <div class="editor-label">Image File</div>
    <div class="editor-field">
        <input type="file" name="uploadImage" />
    </div>

    <br /><br />
    <input type="submit" value="Add Book" />
}